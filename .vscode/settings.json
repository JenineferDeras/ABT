{
  "zencoder.enabled": false,
  
  // Hide gitignored files from file explorer
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/.venv": true,
    "**/venv": true,
    "**/dist": true,
    "**/build": true,
    "**/.pytest_cache": true,
    "**/.coverage": true,
    "**/.scannerwork": true
  },
  
  // Exclude from search
  "search.exclude": {
    "**/node_modules": true,
    "**/.venv": true,
    "**/venv": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/.pytest_cache": true,
    "**/.scannerwork": true,
    "**/package-lock.json": true
  },
  
  // Prevent VS Code from watching these files (performance)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  
  // Git settings
  "scm.defaultViewMode": "tree",
  "git.ignoreLimitWarning": true,
  "git.untrackedChanges": "hidden",
  
  // Default formatters (fixes your warning)
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  // Format on save
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  
  // Python specific
  "python.analysis.typeCheckingMode": "basic",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black"
}
