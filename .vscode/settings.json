{
  "git.autofetch": false,
  "git.autoRefresh": false,
  "git.path": "/usr/bin/git",
  "git.enabled": true,
  "git.autoRepositoryDetection": true,
  "git.detectSubmodules": false,
  "git.ignoreLimitWarning": true,
  "json.schemaDownload.enable": true,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.preferences.npmLocation": "/usr/local/bin/npm",
  "typescript.npm": "/usr/local/bin/npm",
  "typescript.tsc.autoDetect": "on",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "npm.packageManager": "npm",
  "npm.executable": "/usr/local/bin/npm",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash"
    }
  },
  "redhat.telemetry.enabled": false,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.codeActions.triggerOnFocusChange": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.json": "jsonc"
  },
  "emmet.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html"
  },
  "tailwindCSS.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html"
  },
  "tailwindCSS.experimental.classRegex": ["cn\\(([^)]*)\\)"],
  "tailwindCSS.validate": true,
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.lint.invalidVariant": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidTailwindDirective": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "warning",
  // CSS validation disabled: Tailwind CSS handles all styling
  // Using @apply and Tailwind directives; native CSS validation conflicts
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "python.languageServer": "Pylance",
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "python.terminal.activateEnvironment": false,
  "python.linting.enabled": false,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.exclude": [
    "**/node_modules",
    "**/.vscode-remote/**",
    "**/home/node/.vscode-remote/**",
    "**/.next/**",
    "**/dist/**",
    "**/__pycache__/**",
    "**/notebooks/**",
    "**/*.py"
  ],
  "python.analysis.ignore": ["**/__pycache__", "**/notebooks", "**/*.py"],
  // Disable Pylance and Pylint for Python files since dependencies are managed separately
  "python.analysis.typeCheckingMode": "off",
  "pylance.typeCheckingMode": "off",
  "pylint.enable": false,
  "pylint.showCategories": false,
  "[python]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/notebooks/__pycache__": true,
    "**/notebooks/abaco_venv": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.next": true,
    "**/dist": true,
    "**/__pycache__": true,
    "**/notebooks/__pycache__": true,
    "**/notebooks/abaco_venv": true,
    "**/package-lock.json": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.vscode-remote/**": true,
    "**/notebooks/__pycache__/**": true,
    "**/notebooks/abaco_venv/**": true,
    "**/package-lock.json": true
  },
  "extensions.ignoreRecommendations": false,
  "workbench.startupEditor": "welcomePage",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",
  "debug.console.wordWrap": false,
  "debug.terminal.clearBeforeReusing": true,
  "eslint.workingDirectories": ["./"],
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Jest/Testing Library configuration
  "jest.showCoverageOnLoad": false,
  "jest.autoRun": "off",
  "jest.runMode": "on-demand",
  "nextjs.serverPort": 3000,
  "sonarlint.connectedMode.project": {
    "connectionId": "jenineferderas",
    "projectKey": "jenineferderas_abaco-sim-e"
  },
  "sonarlint.analysisExcludesStandalone": "**/node_modules/**,**/.next/**,**/dist/**,**/coverage/**,**/*.test.ts,**/*.test.tsx",
  "sonarlint.automaticAnalysis": true,
  "sonarlint.focusOnNewCode": true,
  "sonarlint.disableTelemetry": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "jsonc": true,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "javascriptreact": true
  },
  "github.copilot.chat.localeOverride": "en",
  // CodeRabbit configuration
  "[coderabbit]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "http.proxyStrictSSL": false,
  "http.systemCertificates": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[python]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // Disable direct file execution (use npm scripts instead)
  "code-runner.executorMap": {},
  "code-runner.runInTerminal": false
}
